@model IEnumerable<ImageCloudMVC.Models.Files.FilesView>

@{
    ViewBag.Title = "FilesViewRoot";
}

<h2>FilesViewRoot</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
